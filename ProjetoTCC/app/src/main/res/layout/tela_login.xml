<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaLogin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="206dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ellipse_16" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Entrar"
        android:textColor="#000000"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/edtEmailLogin"
        android:layout_width="330dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/radius_edttext"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Email"
        android:textSize="16dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="#484848"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtPasswordLogin"
        android:layout_width="330dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/radius_edttext"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Senha"
        android:textSize="16dp"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#484848"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailLogin" />

    <CheckBox
        android:id="@+id/ckbRememberPassword"
        android:layout_width="161dp"
        android:layout_height="29dp"
        android:layout_marginTop="532dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Lembrar senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txtForgotPassword"
        android:layout_width="138dp"
        android:layout_height="27dp"
        android:layout_marginTop="532dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Esqueceu Senha?"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/radius_botoes"
        android:fontFamily="@font/poppinsregular"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ckbRememberPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="700dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Ainda nÃ£o possui uma conta?"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="96dp"
        android:layout_height="21dp"
        android:layout_marginTop="700dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Cadastrar"
        android:textAlignment="viewStart"
        android:textColor="@color/green3"
        android:textColorLink="@color/green3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>