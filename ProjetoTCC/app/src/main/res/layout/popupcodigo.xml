<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="346dp"
    android:layout_height="466dp"
    android:orientation="vertical"
    android:background="@drawable/radius_popup"
    android:layout_gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Confirme o Código"
        android:textColor="@color/black"
        android:textSize="20dp">

    </TextView>

    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/radius_edttext"
        android:hint="Código"
        android:fontFamily="@font/poppinsregular"
        android:paddingLeft="10dp"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>

    <TextView
        android:id="@+id/txtResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="42dp"
        android:text="Não recebeu o código?Reenviar Código"
        android:textSize="15dp"></TextView>

    <Button
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:text="Confirmar"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/radius_botoes"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        ></Button>

</LinearLayout>