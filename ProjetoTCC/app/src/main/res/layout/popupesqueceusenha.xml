<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="346dp"
    android:layout_height="466dp"
    android:orientation="vertical"
    android:background="@drawable/radius_popup"
    android:layout_gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Recuperação de Conta"
        android:textColor="@color/black"
        android:textSize="20dp">

    </TextView>

    <EditText
        android:id="@+id/edtEmailRetrieveAccount"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/radius_edttext"
        android:fontFamily="@font/poppinsregular"
        android:hint="Email"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:text="Enviaremos um Código para se Email"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>

    <Button
        android:id="@+id/btnConfirmRetrieveAccount"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/radius_botoes"
        android:fontFamily="@font/poppinsregular"
        android:text="Confirmar"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="TouchTargetSizeCheck"></Button>

</LinearLayout>